@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Style="background-color:#263238; color: whitesmoke">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h6" Style="font-family: 'Pacifico', cursive;">RMS Blazor</MudText>
        <MudSpacer />
    </MudAppBar>
    <MudDrawer  @bind-Open="_drawerOpen"  Width="270px" Height="100%" Anchor="Anchor.Start" Elevation="1"  Variant="@DrawerVariant.Temporary">
        <MudDrawerHeader Style="background-color:#263238; color: whitesmoke; height:50px;">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            <MudText Typo="Typo.h6" Style="margin-top:5px; font-family: 'Pacifico', cursive;">RMS Blazor</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer  Class="my-1 pt-1">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
